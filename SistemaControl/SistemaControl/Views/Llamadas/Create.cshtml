@model SistemaControl.Models.Llamadas

@{
    ViewData["Title"] = "Create";
}

<h2>Registrar nueva llamada</h2>

<hr />

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Horizontal Form</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdNegocio" class="control-label"></label>
            <select asp-for="IdNegocio" class="form-control" asp-items="ViewBag.IdNegocio"></select>
        </div>
        <div class="form-group">
            <label asp-for="FechaHora" class="control-label"></label>
            <input asp-for="FechaHora" class="form-control" />
            <span asp-validation-for="FechaHora" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

